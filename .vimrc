" NeoBundle の設定
source ~/.vimrc.bundle

" yankした文字を連続コピー
vnoremap <silent> <C-p> "0p<CR>

" 基本設定
source ~/.vimrc.basic
" ステータスライン設定
source ~/.vimrc.statusline
" インデント設定
source ~/.vimrc.indent
" 表示関連
source ~/.vimrc.appearance
" 補完関連
source ~/.vimrc.completion
" 検索関連
source ~/.vimrc.search
" 移動関連
source ~/.vimrc.moving
" カラー関連
source ~/.vimrc.colors
" 編集関連
source ~/.vimrc.editing
" エンコーディング関連
source ~/.vimrc.encoding
" プラグインの設定たち
source ~/.vimrc.plugins_setting
" vimタブ関連
source ~/.vimrc.vimtab
" 新規Windowを開く際の設定
source ~/.vimrc.newwindow
" MacVim用の設定
source ~/.vimrc.macvim
" vimdiff設定
source ~/.vimrc.vimdiff
" タグ関連
source ~/.vimrc.tags
" Go言語設定
source ~/.vimrc.golang
